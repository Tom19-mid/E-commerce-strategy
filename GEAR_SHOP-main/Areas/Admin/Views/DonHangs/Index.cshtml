@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Admin_Layout.cshtml";
    var filter = ViewBag.Filter;
    int total = (int)ViewBag.Total;
    int page = (int)filter.GetType().GetProperty("page").GetValue(filter, null);
    int pageSize = (int)filter.GetType().GetProperty("pageSize").GetValue(filter, null);
    int pageCount = (int)Math.Ceiling(total / (double)pageSize);
    string q = (string)filter.GetType().GetProperty("q").GetValue(filter, null);
    int? statusId = (int?)filter.GetType().GetProperty("statusId").GetValue(filter, null);
    DateTime? from = (DateTime?)filter.GetType().GetProperty("from").GetValue(filter, null);
    DateTime? to = (DateTime?)filter.GetType().GetProperty("to").GetValue(filter, null);
    var statuses = (IEnumerable<TL4_SHOP.Data.TrangThaiDonHang>)ViewBag.Statuses;
}
<div class="d-flex align-items-center justify-content-between mb-3">
  <h4 class="mb-0">Đơn hàng</h4>
</div>
<div class="card">
  <div class="card-body">
    <form class="row g-2 mb-3" method="get">
      <div class="col-md-4">
        <input class="form-control" type="text" name="q" value="@q" placeholder="Tìm ID, khách hàng, email..." />
      </div>
      <div class="col-md-3">
                <select class="form-select" name="statusId">
                    <option value="">-- Tất cả trạng thái --</option>
                    @foreach (var s in statuses)
                    {
                        if (statusId == s.TrangThaiId)
                        {
                            <option value="@s.TrangThaiId" selected>@s.TenTrangThai</option>
                        }
                        else
                        {
                            <option value="@s.TrangThaiId">@s.TenTrangThai</option>
                        }
                    }
                </select>
      </div>
      <div class="col-md-2">
        <input type="date" class="form-control" name="from" value="@(from?.ToString("yyyy-MM-dd"))" />
      </div>
      <div class="col-md-2">
        <input type="date" class="form-control" name="to" value="@(to?.ToString("yyyy-MM-dd"))" />
      </div>
      <div class="col-md-1">
        <button class="btn btn-secondary w-100" type="submit">Lọc</button>
      </div>
    </form>

    <div class="table-responsive">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th>ID</th>
            <th>Ngày đặt</th>
            <th>Khách hàng</th>
            <th>Email</th>
            <th class="text-end">Tổng tiền</th>
            <th>Trạng thái</th>
            <th style="width:180px"></th>
          </tr>
        </thead>
        <tbody>
          @foreach (var o in Model)
          {
            <tr>
              <td>#@o.DonHangId</td>
              <td>@(((DateTime)o.NgayDatHang).ToString("dd/MM/yyyy HH:mm"))</td>
              <td>@o.TenKhachHang</td>
              <td>@o.EmailNguoiDat</td>
              <td class="text-end">@(((decimal)o.TongTien).ToString("N0")) đ</td>
              <td><span class="badge bg-label-primary">@o.TrangThai</span></td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-primary d-inline-block me-1" asp-action="Details" asp-route-id="@o.DonHangId">Chi tiết</a>
                                <br />
                                <br />
                                <a class="btn btn-sm btn-secondary d-inline-block" asp-action="Invoice" asp-route-id="@o.DonHangId">Hóa đơn</a>
                            </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <div>Tổng: <strong>@total</strong> đơn hàng</div>
    <nav>
      <ul class="pagination mb-0">
        @for (int i = 1; i <= pageCount; i++)
        {
            <li class="page-item @(i==page?"active":"")">
              <a class="page-link" href="@Url.Action("Index", new { q=q, statusId=statusId, from=from?.ToString("yyyy-MM-dd"), to=to?.ToString("yyyy-MM-dd"), page=i, pageSize=pageSize })">@i</a>
            </li>
        }
      </ul>
    </nav>
  </div>
</div>