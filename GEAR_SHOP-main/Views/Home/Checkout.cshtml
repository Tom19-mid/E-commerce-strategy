@{
    ViewData["Title"] = "Thanh toán";
}
 <!-- Page Header Start -->
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="font-weight-semi-bold text-uppercase mb-3">Thanh toán</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Checkout</p>
        </div>
    </div>
</div>
<!-- Page Header End -->
<!-- Checkout Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8">
            <div class="mb-4">
                <h4 class="font-weight-semi-bold mb-4" style="font-family: Tahoma;">Địa chỉ thanh toán</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>Tên của bạn</label>
                        <input class="form-control" type="text" placeholder="Tân">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Họ và tên lót của bạn</label>
                        <input class="form-control" type="text" placeholder="Lê Nhật">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="text" placeholder="vidu@gmail.com">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Số điện thoại</label>
                        <input class="form-control" type="text" placeholder="+84 90906750">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Số nhà, tên đường/phố</label>
                        <input class="form-control" type="text" placeholder="56, Nguyễn Thị Thập">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Phường/Xã, Quận/Huyện</label>
                        <input class="form-control" type="text" placeholder="P.Tân Phong, Quận 7">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Quốc gia</label>
                        <select class="custom-select">
                            <option selected>VietNam</option>
                            <option>United States</option>
                            <option>ThaiLand</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Thành phố</label>
                        <input class="form-control" type="text" placeholder="Hồ Chí Minh">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Tỉnh/Thành phố</label>
                        <input class="form-control" type="text" placeholder="Hồ Chí Minh">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>ZIP Code</label>
                        <input class="form-control" type="text" placeholder="70000">
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="newaccount">
                            <label class="custom-control-label" for="newaccount">Tạo tài khoản</label>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="shipto">
                            <label class="custom-control-label" for="shipto" data-toggle="collapse" data-target="#shipping-address">Giao hàng đến địa chỉ khác</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="collapse mb-4" id="shipping-address">
                <h4 class="font-weight-semi-bold mb-4">Shipping Address</h4>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label>First Name</label>
                        <input class="form-control" type="text" placeholder="John">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Last Name</label>
                        <input class="form-control" type="text" placeholder="Doe">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>E-mail</label>
                        <input class="form-control" type="text" placeholder="example@email.com">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Mobile No</label>
                        <input class="form-control" type="text" placeholder="+123 456 789">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address Line 1</label>
                        <input class="form-control" type="text" placeholder="123 Street">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Address Line 2</label>
                        <input class="form-control" type="text" placeholder="123 Street">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>Country</label>
                        <select class="custom-select">
                            <option selected>United States</option>
                            <option>Afghanistan</option>
                            <option>Albania</option>
                            <option>Algeria</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group">
                        <label>City</label>
                        <input class="form-control" type="text" placeholder="New York">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>State</label>
                        <input class="form-control" type="text" placeholder="New York">
                    </div>
                    <div class="col-md-6 form-group">
                        <label>ZIP Code</label>
                        <input class="form-control" type="text" placeholder="123">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Tổng đơn hàng</h4>
                </div>
                <div class="card-body">
                    <h5 class="font-weight-medium mb-3">Products</h5>
                    <div class="d-flex justify-content-between">
                        <p> Laptop gaming Acer Nitro Lite 16 NL16 71G 71UJ</p>
                        <p>
                            23.490.000đ
                        </p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p> Laptop gaming Acer Nitro V ANV16 41 R6ZY	</p>
                        <p>23.490.000đ</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Card màn hình ASUS TUF Gaming GeForce RTX 5090 32GB GDDR7 (TUF-RTX5090-32G-GAMING)</p>
                        <p>99.990.000đ</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Card màn hình ASUS ROG Astral LC GeForce RTX 5090 32GB GDDR7 OC Edition (ROG-ASTRAL-LC-RTX5090-O32G-GAMING)</p>
                        <p>650.000đ</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Ram G.Skill Ripjaws V 1x8G 3600 (F4-3600C18S-8GVK)</p>
                        <p>99.990.000đ</p>
                    </div>
                    <hr class="mt-0">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium" style="font-family: Tahoma;">Tổng tiền</h6>
                        <h6 class="font-weight-medium">252.610.000đ</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="font-weight-medium" style="font-family: Tahoma;">Phí vận chuyển</h6>
                        <h6 class="font-weight-medium">15.000đ</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="font-weight-bold" style="font-family: Tahoma;">Tổng cộng</h5>
                        <h5 class="font-weight-bold">252.625.000đ</h5>
                    </div>
                </div>
            </div>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Thanh toán</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="paypal">
                            <label class="custom-control-label" for="paypal">Momo</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="directcheck">
                            <label class="custom-control-label" for="directcheck">Ngân hàng</label>
                        </div>
                    </div>
                    <div class="">
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" name="payment" id="banktransfer">
                            <label class="custom-control-label" for="banktransfer">Tiền mặt</label>
                        </div>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <button class="btn btn-lg btn-block btn-primary font-weight-bold my-3 py-3" style="font-family: Tahoma;">Đặt hàng</button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Checkout End -->
