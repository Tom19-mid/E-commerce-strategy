@model List<TL4_SHOP.Models.ViewModels.DonHangDetailViewModel>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout_4TL.cshtml";
}
<h2 style="font-family: Tahoma;">Lịch sử đơn hàng của bạn</h2>

@if (Model.Count == 0)
{
        <p>Bạn chưa có đơn hàng nào.</p>
}
else
{
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Ngày đặt</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var dh in Model)
            {
                        <tr>
                            <td>@dh.DonHangId</td>
                            <td>@dh.NgayDatHang.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@dh.TrangThaiDonHangText</td>
                            <td>@dh.TongTien.ToString("N0") đ</td>
                            <td>
                                <a asp-action="Detail" asp-controller="Order" asp-route-id="@dh.DonHangId" class="btn btn-sm btn-primary">Xem</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
