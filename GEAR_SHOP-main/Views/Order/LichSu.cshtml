@model List<TL4_SHOP.Models.ViewModels.DonHangDetailViewModel>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
    Layout = "~/Views/Shared/_Layout_4TL.cshtml";
}

<style>
    th, td{
        font-family: Tahoma;
    }

    /* Tạo class mới để không ảnh hưởng các bảng khác */
    .table-dam-hon,
    .table-dam-hon th,
    .table-dam-hon td {
        border: 1px solid #000 !important; /* 2px là độ dày, #000 là màu đen */
    }

    h2{
        margin-top: 1%;
        font-family: Tahoma;
    }
</style>
<h2 data-i18n="nav_Your_order_history">Lịch sử đơn hàng của bạn</h2>

@if (Model.Count == 0)
{
    <p data-i18n="nav_You_don't_have_any_orders_yet.">Bạn chưa có đơn hàng nào.</p>
}
else
{
        <table class="table table-bordered table-dam-hon">
            <thead>
                <tr>
                    <th data-i18n="nav_Order_code">Mã đơn</th>
                    <th data-i18n="nav_Order_date">Ngày đặt</th>
                    <th data-i18n="nav_Status">Trạng thái</th>
                    <th data-i18n="nav_Total">Tổng tiền</th>
                    <th data-i18n="nav_Details">Chi tiết</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var dh in Model)
            {
                        <tr>
                            <td>@dh.DonHangId</td>
                            <td>@dh.NgayDatHang.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@dh.TrangThaiDonHangText</td>
                            <td>@dh.TongTien.ToString("N0") đ</td>
                            <td>
                        <a asp-action="Detail" asp-controller="Order" asp-route-id="@dh.DonHangId" class="btn btn-sm btn-primary" style="border-radius: 15px; padding: 10px" data-i18n="nav_view">Xem</a>
                            </td>
                        </tr>
            }
            </tbody>
        </table>
}
