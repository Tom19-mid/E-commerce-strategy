            }

        /* 🔔 Chấm đỏ thông báo tin nhắn mới */
        /* .alert-dot {
            position: absolute;
            top: -6px;
            right: 6px;
            width: 20px;
            height: 20px;
            background: #ff3b30;
            border-radius: 50%;
            display: none;
            box-shadow: 0 0 0 3px rgba(255, 59, 48, 0.2);
        }

            .alert-dot.visible {
                display: inline-block;
            } */
        /* 🔔 Badge hiển thị số tin nhắn chưa đọc */
        #newMessageAlert {
            position: absolute;
            top: -8px;
            right: 1px;
            min-width: 20px;
            height: 20px;
            background-color: #ff3b30;
            color: #fff;
            font-size: 12px;
            font-weight: bold;
            text-align: center;
            line-height: 20px;
