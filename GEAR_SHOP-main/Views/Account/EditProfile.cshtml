@model TL4_SHOP.Models.ViewModels.ProfileEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
    Layout = "~/Views/Shared/_Layout_4TL.cshtml";
}
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

<!-- Libraries Stylesheet -->
<link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

<!-- Customized Bootstrap Stylesheet -->
<link href="~/css/style.css" rel="stylesheet">

<!--Style để cái liên hệ không có viền-->
<style>
    button:focus,
    .contact-pill:focus {
        outline: none !important;
        box-shadow: none !important;
    }
</style> 


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-person-lines-fill me-2"></i> Chỉnh sửa thông tin</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="EditProfile" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="bi bi-person-fill me-1"></i> Họ tên</label>
                            <input asp-for="HoTen" class="form-control rounded-pill" placeholder="Nhập họ tên" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="bi bi-envelope-fill me-1"></i> Email</label>
                            <input asp-for="Email" class="form-control rounded-pill" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold"><i class="bi bi-telephone-fill me-1"></i> Số điện thoại</label>
                            <input asp-for="Phone" class="form-control rounded-pill" placeholder="Nhập số điện thoại" />
                        </div>

                        <hr class="my-4" />
                        <h5 class="text-bg-success mb-3"><i class="bi bi-key-fill me-2"></i> Đổi mật khẩu (nếu cần)</h5>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mật khẩu hiện tại</label>
                            <input asp-for="CurrentPassword" type="password" class="form-control rounded-pill" placeholder="Nhập mật khẩu hiện tại" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Mật khẩu mới</label>
                            <input asp-for="NewPassword" type="password" class="form-control rounded-pill" placeholder="Nhập mật khẩu mới" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Xác nhận mật khẩu mới</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Nhập lại mật khẩu mới" />
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Profile", "Account")" class="btn btn-outline-primary rounded-pill px-4">
                                <i class="bi bi-arrow-left-circle me-1"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-success rounded-pill px-4">
                                <i class="bi bi-check-circle me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-warning mt-3 rounded-pill text-center">@ViewBag.Message</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Thêm link Bootstrap Icons nếu chưa có -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
