@model TL4_SHOP.Models.ViewModels.TaiKhoanViewModel

@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout_4TL.cshtml";
}
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

<!-- Libraries Stylesheet -->
<link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

<!-- Customized Bootstrap Stylesheet -->
<link href="~/css/style.css" rel="stylesheet">

<style>
    button:focus,
    .contact-pill:focus {
        outline: none !important;
        box-shadow: none !important;
    }

</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i> Thông tin cá nhân</h4>
                </div>
                <div class="card-body p-4">
                    <table class="table table-borderless mb-4">
                        <tr>
                            <th class="text-primary"><i class="bi bi-person-fill me-1"></i> Họ tên</th>
                            <td>@Model.HoTen</td>
                        </tr>
                        <tr>
                            <th class="text-primary"><i class="bi bi-envelope-fill me-1"></i> Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th class="text-primary"><i class="bi bi-telephone-fill me-1"></i> Số điện thoại</th>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <th class="text-primary"><i class="bi bi-award-fill me-1"></i> Loại tài khoản</th>
                            <td>@Model.LoaiTaiKhoan</td>
                        </tr>
                    </table>

                    <div class="d-flex justify-content-between">
                        <a href="@Url.Action("EditProfile", "Account")" class="btn btn-outline-primary rounded-pill px-4">
                            <i class="bi bi-pencil-square me-1"></i> Chỉnh sửa
                        </a>
                        <a asp-controller="Order" asp-action="LichSu" class="btn btn-outline-success rounded-pill px-4">
                            <i class="bi bi-clock-history me-1" style="font-family: Tahoma;"></i> Lịch sử đơn hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Thêm link Bootstrap Icons nếu chưa có -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
