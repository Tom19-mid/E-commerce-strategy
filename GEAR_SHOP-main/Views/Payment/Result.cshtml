@model TL4_SHOP.Models.PaymentResultViewModel
@{
    ViewData["Title"] = Model.Success ? "Thanh toán thành công" : "Thanh toán thất bại";
    Layout = "~/Views/Shared/_Layout_4TL.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    @if (Model.Success)
                    {
                        <!-- ========== THANH TOÁN THÀNH CÔNG ========== -->
                        <div class="success-animation mb-4">
                            <div class="checkmark-circle">
                                <div class="background"></div>
                                <div class="checkmark draw"></div>
                            </div>
                        </div>

                        <h2 class="text-success mb-3 fw-bold" style="font-family: Tahoma;">
                            <i class="fas fa-check-circle me-2"></i>@Model.Message
                        </h2>
                        <p class="text-muted mb-4 fs-5">Cảm ơn bạn đã mua hàng tại <strong>4TL Shop</strong>!</p>

                        <!-- Chi tiết giao dịch -->
                        <div class="transaction-details bg-light p-4 rounded mb-4 text-start shadow-sm">
                            <h5 class="border-bottom pb-3 mb-3 text-primary">
                                <i class="fas fa-receipt me-2"></i>Chi tiết giao dịch
                            </h5>

                            <div class="row mb-2 align-items-center">
                                <div class="col-5 col-md-4">
                                    <strong><i class="fas fa-shopping-bag me-2 text-muted"></i>Mã đơn hàng:</strong>
                                </div>
                                <div class="col-7 col-md-8 text-end">
                                    <span class="badge bg-primary fs-6">#@Model.OrderId</span>
                                </div>
                            </div>

                            <div class="row mb-2 align-items-center">
                                <div class="col-5 col-md-4">
                                    <strong><i class="fas fa-hashtag me-2 text-muted"></i>Mã giao dịch:</strong>
                                </div>
                                <div class="col-7 col-md-8 text-end">
                                    <code class="text-dark">@Model.TransactionId</code>
                                </div>
                            </div>

                            <div class="row mb-2 align-items-center">
                                <div class="col-5 col-md-4">
                                    <strong><i class="fas fa-wallet me-2 text-muted"></i>Phương thức:</strong>
                                </div>
                                <div class="col-7 col-md-8 text-end">
                                    @if (Model.PaymentMethod == "MoMo")
                                    {
                                        <img src="https://developers.momo.vn/v3/assets/images/icon-52bd5808cecdb1970e1aeec3c31a3ee1.png"
                                             alt="MoMo" style="width: 24px; height: 24px;" class="me-1">
                                        <span class="fw-bold">MoMo</span>
                                    }
                                    else if (Model.PaymentMethod == "ZaloPay")
                                    {
                                        <img src="https://cdn.haitrieu.com/wp-content/uploads/2022/10/Icon-ZaloPay-Square.png"
                                             alt="ZaloPay" style="width: 24px; height: 24px;" class="me-1">
                                        <span class="fw-bold">ZaloPay</span>
                                    }
                                    else if (Model.PaymentMethod == "VNPay")
                                    {
                                        <img src="https://vnpay.vn/s1/statics.vnpay.vn/2023/9/06ncktiwd6dc1694418196384.png"
                                             alt="VNPay" style="width: 24px; height: 24px;" class="me-1">
                                        <span class="fw-bold">VNPay</span>
                                    }
                                    else if (Model.PaymentMethod == "PayPal")
                                    {
                                        <img src="https://www.paypalobjects.com/webstatic/icon/pp258.png"
                                             alt="PayPal" style="width: 24px; height: 24px;" class="me-1">
                                        <span class="fw-bold">PayPal</span>
                                    }
                                    else if (Model.PaymentMethod == "Stripe")
                                    {
                                        <i class="fab fa-cc-stripe text-primary fs-4 me-1"></i>
                                        <span class="fw-bold">Stripe</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-money-bill-wave text-success fs-5 me-1"></i>
                                        <span class="fw-bold">COD</span>
                                    }
                                </div>
                            </div>

                            <div class="row mb-3 align-items-center">
                                <div class="col-5 col-md-4">
                                    <strong><i class="far fa-clock me-2 text-muted"></i>Thời gian:</strong>
                                </div>
                                <div class="col-7 col-md-8 text-end">
                                    @Model.PaymentTime.ToString("dd/MM/yyyy HH:mm:ss")
                                </div>
                            </div>

                            <div class="row mt-4 pt-3 border-top align-items-center">
                                <div class="col-6">
                                    <h5 class="mb-0"><i class="fas fa-coins me-2 text-warning"></i>Tổng tiền:</h5>
                                </div>
                                <div class="col-6 text-end">
                                    <h4 class="text-danger mb-0 fw-bold">@Model.Amount.ToString("N0")₫</h4>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin tiếp theo -->
                        <div class="alert alert-info d-flex align-items-start mb-4">
                            <i class="fas fa-info-circle fs-4 me-3 mt-1"></i>
                            <div class="text-start">
                                <strong>Bước tiếp theo:</strong>
                                <ul class="mb-0 mt-2" style="list-style-position: inside;">
                                    <li>Chúng tôi sẽ xác nhận đơn hàng qua email/SMS</li>
                                    <li>Đơn hàng sẽ được giao trong 2-3 ngày làm việc</li>
                                    <li>Bạn có thể theo dõi đơn hàng trong mục "Đơn hàng của tôi"</li>
                                </ul>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a href="/Order/MyOrders" class="btn btn-primary btn-lg px-4 shadow-sm">
                                <i class="fas fa-list me-2"></i> Xem đơn hàng của tôi
                            </a>
                            <a href="/" class="btn btn-outline-primary btn-lg px-4">
                                <i class="fas fa-home me-2"></i> Về trang chủ
                            </a>
                        </div>
                    }
                    else
                    {
                        <!-- ========== THANH TOÁN THẤT BẠI ========== -->
                        <div class="failed-animation mb-4">
                            <i class="fas fa-times-circle text-danger" style="font-size: 6rem; animation: shake 0.5s;"></i>
                        </div>

                        <h2 class="text-danger mb-3 fw-bold" style="font-family: Tahoma;">
                            <i class="fas fa-exclamation-triangle me-2"></i>@Model.Message
                        </h2>
                        <p class="text-muted mb-4 fs-5">Đã có lỗi xảy ra trong quá trình thanh toán.</p>

                        <!-- Thông tin đơn hàng -->
                        @if (Model.OrderId > 0)
                        {
                            <div class="alert alert-warning mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Mã đơn hàng: <strong>#@Model.OrderId</strong><br />
                                Số tiền: <strong>@Model.Amount.ToString("N0")₫</strong>
                            </div>
                        }

                        <!-- Lý do có thể -->
                        <div class="bg-light p-4 rounded mb-4 text-start">
                            <h6 class="fw-bold mb-3"><i class="fas fa-question-circle me-2"></i>Nguyên nhân có thể:</h6>
                            <ul class="text-muted mb-0">
                                <li>Số dư tài khoản không đủ</li>
                                <li>Thông tin thanh toán không chính xác</li>
                                <li>Phiên giao dịch đã hết hạn</li>
                                <li>Lỗi kết nối mạng</li>
                                <li>Bạn đã hủy giao dịch</li>
                            </ul>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                            <a href="/Payment/SelectMethod?orderId=@Model.OrderId" class="btn btn-primary btn-lg px-4 shadow-sm">
                                <i class="fas fa-redo me-2"></i> Thử lại thanh toán
                            </a>
                            <a href="/Cart/Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-shopping-cart me-2"></i> Về giỏ hàng
                            </a>
                        </div>

                        <!-- Hỗ trợ -->
                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                Cần hỗ trợ? Liên hệ:
                                <a href="tel:1900xxxx">1900-xxxx</a> hoặc
                                <a href="mailto:support@4tlshop.vn">support@4tlshop.vn</a>
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Animation cho checkmark thành công */
    .checkmark-circle {
        width: 100px;
        height: 100px;
        position: relative;
        display: inline-block;
        vertical-align: top;
    }

        .checkmark-circle .background {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background: #28a745;
            position: absolute;
            animation: scaleIn 0.5s ease-in-out;
        }

        .checkmark-circle .checkmark {
            border-radius: 5px;
        }

            .checkmark-circle .checkmark.draw:after {
                animation-duration: 0.8s;
                animation-timing-function: ease;
                animation-name: checkmark;
                transform: scaleX(-1) rotate(135deg);
            }

            .checkmark-circle .checkmark:after {
                opacity: 1;
                height: 50px;
                width: 25px;
                transform-origin: left top;
                border-right: 4px solid white;
                border-top: 4px solid white;
                content: '';
                left: 30px;
                top: 50px;
                position: absolute;
            }

    @@keyframes scaleIn {
        0% {
            transform: scale(0);
            opacity: 0;
        }

        50% {
            transform: scale(1.1);
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    @@keyframes checkmark {
        0% {
            height: 0;
            width: 0;
            opacity: 1;
        }

        20% {
            height: 0;
            width: 25px;
            opacity: 1;
        }

        40% {
            height: 50px;
            width: 25px;
            opacity: 1;
        }

        100% {
            height: 50px;
            width: 25px;
            opacity: 1;
        }
    }

    @@keyframes shake {
        0%, 100% {
            transform: translateX(0);
        }

        10%, 30%, 50%, 70%, 90% {
            transform: translateX(-10px);
        }

        20%, 40%, 60%, 80% {
            transform: translateX(10px);
        }
    }

    .transaction-details {
        animation: fadeInUp 0.5s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
