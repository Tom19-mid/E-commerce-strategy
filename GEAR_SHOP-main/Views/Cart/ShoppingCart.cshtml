@model List<TL4_SHOP.Models.CartItem>

@{
    Layout = "~/Views/Shared/_Layout_4TL.cshtml";
}
@{
    ViewData["Title"] = "Giỏ hàng";
    var tongTien = Model.Sum(item => item.ThanhTien);
    var phiVanChuyen = 15000;
    var tongCong = tongTien + phiVanChuyen;
}

<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
					<tr style="font-family: Tahoma;">
                        <th>Sản phẩm</th>
                        <th>Giá tiền</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                        <th>Xóa</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
								<img src="@Url.Content("~/" + ((item.HinhAnh?.Contains('/') ?? false) ? item.HinhAnh : $"images/products/{item.HinhAnh}"))"
									 alt="@item.TenSanPham" style="width: 50px;"
									 onerror="this.onerror=null;this.src='@Url.Content("~/images/placeholder-product.png")';">
                                @item.TenSanPham
                            </td>
                            <td class="align-middle">@item.Gia.ToString("N0")đ</td>
                            <td class="align-middle">
                                <form asp-action="UpdateQuantity" asp-controller="Cart" method="post" class="d-flex justify-content-center">
                                    <input type="hidden" name="id" value="@item.SanPhamId" />
                                    <input type="number" name="quantity" value="@item.SoLuong" class="form-control w-50 text-center" min="1" />
                                    <button type="submit" class="btn btn-sm btn-primary ms-2">
                                        <i class="fa fa-sync-alt"></i>
                                    </button>
                                </form>
                            </td>
                            <td class="align-middle">@item.ThanhTien.ToString("N0")đ</td>
                            <td class="align-middle">
                                <a asp-action="Remove" asp-controller="Cart" asp-route-id="@item.SanPhamId" class="btn btn-sm btn-danger">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Cột tổng tiền và thanh toán -->
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
				<div class="card-header bg-secondary border-0" style="font-family: Tahoma;">
                    <h4 class="font-weight-semi-bold m-0">Tổng hóa đơn</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1" style="font-family: Tahoma;">
                        <h6>Tổng tiền</h6>
                        <h6>@tongTien.ToString("N0")đ</h6>
                    </div>
					<div class="d-flex justify-content-between" style="font-family: Tahoma;">
                        <h6>Phí vận chuyển</h6>
                        <h6>@phiVanChuyen.ToString("N0")đ</h6>
                    </div>
                </div>
				<div class="card-footer border-secondary bg-transparent" style="font-family: Tahoma;">
                    <div class="text-center mt-2" style="justify-items: left;">
						<h5 class="mb-3">Tổng cộng: <span class="text-primary" style="margin-left: 210px">@tongCong.ToString("N0")đ</span></h5>
						<a href="/Order/Checkout" class="btn btn-primary btn-lg px-5 py-2" style="font-family: Tahoma;">
                            Tiến hành thanh toán
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->
